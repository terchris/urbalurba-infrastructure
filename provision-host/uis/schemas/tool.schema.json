{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "tool.schema.json",
  "title": "CLI Tool",
  "description": "Schema for CLI tools in the Urbalurba Infrastructure Stack",
  "type": "object",
  "required": ["id", "name", "description", "builtin"],
  "properties": {
    "@type": {
      "type": "string",
      "const": "SoftwareApplication",
      "description": "Schema.org type"
    },
    "id": {
      "type": "string",
      "description": "Unique identifier for the tool (lowercase, hyphenated)",
      "pattern": "^[a-z0-9-]+$"
    },
    "name": {
      "type": "string",
      "description": "Display name of the tool"
    },
    "description": {
      "type": "string",
      "description": "Brief description of the tool"
    },
    "builtin": {
      "type": "boolean",
      "description": "Whether the tool is included by default in the provision host"
    },
    "category": {
      "type": "string",
      "description": "Tool category (e.g., CLOUD_TOOLS)",
      "pattern": "^[A-Z_]+$"
    },
    "size": {
      "type": "string",
      "description": "Approximate installation size (e.g., '~200MB')"
    },
    "website": {
      "type": "string",
      "description": "Official tool website URL",
      "format": "uri"
    }
  }
}
