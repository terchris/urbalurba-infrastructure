# Global settings
global:
  cluster: gravitee

# Disable bundled dependencies
mongodb-replicaset:
  enabled: false
elasticsearch:
  enabled: false

# MongoDB configuration
mongo:
  uri: mongodb://gravitee_user:SecretPassword1@mongodb.default.svc.cluster.local:27017/graviteedb?authSource=admin

# Elasticsearch configuration
es:
  endpoints:
    - http://elasticsearch.default.svc.cluster.local:9200
  security:
    enabled: false

# API configuration
api:
  enabled: true
  replicaCount: 1
  autoscaling:
    enabled: false
  # Use environment variables for consistent path configuration
  env:
    - name: gravitee_management_entrypoint
      value: /apim/management
    - name: gravitee_portal_entrypoint
      value: /apim/portal
    - name: console_ui_url
      value: /apim/console
    - name: console_api_url
      value: /apim/management
    - name: portal_ui_url
      value: /apim/portal-ui

# Gateway configuration
gateway:
  enabled: true
  replicaCount: 1
  autoscaling:
    enabled: false
  env:
    - name: gravitee_http_api_entrypoint
      value: /apim/gateway

# UI configuration
ui:
  enabled: true
  replicaCount: 1
  autoscaling:
    enabled: false
  # Set the base paths correctly for UI
  env:
    - name: BASE_HREF
      value: /apim/console/
    - name: MGMT_API_URL
      value: /apim/management/organizations/DEFAULT/environments/DEFAULT/

# Portal UI configuration
portal:
  enabled: true
  replicaCount: 1
  autoscaling:
    enabled: false
  # Set the base paths correctly for Portal UI
  env:
    - name: BASE_HREF
      value: /apim/portal-ui/
    - name: PORTAL_API_URL
      value: /apim/portal/environments/DEFAULT

# Rate limit configuration
ratelimit:
  type: mongodb
  mongodb:
    uri: mongodb://gravitee_user:SecretPassword1@mongodb.default.svc.cluster.local:27017/graviteedb?authSource=admin