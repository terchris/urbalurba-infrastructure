#jinja2: trim_blocks: True, lstrip_blocks: True
# 820-cloudflare-tunnel-base.yaml.j2
#
# This template generates a Kubernetes manifest for setting up a Cloudflare tunnel.
# It creates the following resources:
#   1. A Deployment running the cloudflared tunnel
#   2. A ConfigMap with the tunnel configuration
#
# Variables used:
#   - tunnel_id: The ID of the Cloudflare tunnel
#   - domain: The main domain for the tunnel (uses wildcard routing)

---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: cloudflare-tunnel
  namespace: default
  labels:
    app: cloudflared
spec:
  replicas: 1
  selector:
    matchLabels:
      app: cloudflared
  template:
    metadata:
      labels:
        app: cloudflared
    spec:
      containers:
      - name: cloudflared
        image: cloudflare/cloudflared:latest
        args:
        - tunnel
        - --config
        - /etc/cloudflared/config/config.yaml
        - run
        volumeMounts:
        - name: config
          mountPath: /etc/cloudflared/config
          readOnly: true
        - name: creds
          mountPath: /etc/cloudflared/creds
          readOnly: true
      volumes:
      - name: config
        configMap:
          name: cloudflare-tunnel-config
      - name: creds
        secret:
          secretName: cloudflared-credentials
---
apiVersion: v1
kind: ConfigMap
metadata:
  name: cloudflare-tunnel-config
  namespace: default
data:
  config.yaml: |
    tunnel: {{ tunnel_id }}
    credentials-file: /etc/cloudflared/creds/cloudflare-tunnel.json
    ingress:
      - hostname: "{{ domain }}"
        service: http://traefik.kube-system.svc.cluster.local:80
      - hostname: "*.{{ domain }}"
        service: http://traefik.kube-system.svc.cluster.local:80
      - service: http_status:404

# Notes:
# - This template assumes that the Secret containing the Cloudflare credentials
#   has already been created separately.
# - The ingress rules route to Traefik in the kube-system namespace
# - Traefik handles the actual routing to services based on IngressRoute definitions