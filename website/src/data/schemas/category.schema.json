{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "category.schema.json",
  "title": "Service Category",
  "description": "Schema for service categories in the Urbalurba Infrastructure Stack",
  "type": "object",
  "required": ["id", "name", "order", "tags", "abstract", "summary", "logo", "manifest_range"],
  "properties": {
    "@type": {
      "type": "string",
      "const": "CategoryCode",
      "description": "Schema.org type"
    },
    "id": {
      "type": "string",
      "description": "Unique identifier for the category (uppercase)",
      "pattern": "^[A-Z]+$"
    },
    "name": {
      "type": "string",
      "description": "Display name of the category"
    },
    "order": {
      "type": "integer",
      "description": "Sort order for display",
      "minimum": 1
    },
    "tags": {
      "type": "array",
      "description": "Keywords for search and filtering",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9-]+$"
      },
      "minItems": 1
    },
    "abstract": {
      "type": "string",
      "description": "Brief one-line description"
    },
    "summary": {
      "type": "string",
      "description": "Detailed description of the category"
    },
    "logo": {
      "type": "string",
      "description": "Logo filename (SVG preferred, WebP fallback)",
      "pattern": "^[a-z-]+-logo\\.(svg|webp)$"
    },
    "manifest_range": {
      "type": "string",
      "description": "Kubernetes manifest number range for this category",
      "pattern": "^\\d{3}-\\d{3}$"
    }
  }
}
